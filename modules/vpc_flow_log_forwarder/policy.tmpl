{
  "Version": "2012-10-17",
  "Statement": [{
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:ListTagsLogGroup",
        "logs:PutLogEvents"%{ if vpc_check },
        "ec2:CreateNetworkInterface",
        "ec2:DescribeNetworkInterfaces",
        "ec2:DeleteNetworkInterface"%{ endif }
      ],
      "Effect": "Allow",
      "Resource": "*",
      "Sid": "AnyResourceAccess"
    }%{ if s3_check },
    {
      "Action": "s3:GetObject",
      "Effect": "Allow",
      "Resource": ${s3_log_bucket_arns},
      "Sid": "ReadS3Logs"
    }%{ endif },
    {
      "Action": [
        "kms:Decrypt"
      ],
      "Effect": "Allow",
      "Resource": "*",
      "Condition": {
        "StringLike": {
          "kms:ViaService": [
            "lambda.*.amazonaws.com",
            "secretsmanager.*.amazonaws.com"%{ if s3_check },
            "s3.*.amazonaws.com"%{ endif }
          ]%{ if datadog_s3_bucket != "" },
          "kms:EncryptionContext:aws:s3:arn": [
            "${datadog_s3_bucket}/*"
          ]%{ endif }
        }
      },
      "Sid": "KmsDecrypt"
    }
  ]
}
